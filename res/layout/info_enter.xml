<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/info_enter_relativelayout7"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/enter_background" >

        <ImageView
            android:id="@+id/info_enter_imageview1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/head_enter"
            android:visibility="invisible" >
        </ImageView>

        <RelativeLayout
            android:id="@+id/info_enter_relativelayout2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/info_enter_imageview1"
            android:layout_margin="10dp" >

            <EditText
                android:id="@+id/info_enter_edittext1"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/info_shape"
                android:hint="邮箱/昵称"
                android:paddingLeft="20dp"
                android:singleLine="true" >
            </EditText>

            <EditText
                android:id="@+id/info_enter_edittext2"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/info_enter_edittext1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-2dp"
                android:background="@drawable/info_shape2"
                android:hint="密码"
                android:paddingLeft="20dp"
                android:password="true"
                android:singleLine="true" >
            </EditText>
            <!--
	    <CheckBox 
            android:id="@+id/box"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="visible"
            android:layout_alignRight="@+id/info_enter_edittext2"
	        android:layout_alignTop="@+id/info_enter_edittext2"
	         android:layout_marginTop="5dp"
	        android:layout_marginRight="5dp"
            ></CheckBox>	
             <ImageView 
	        android:id="@+id/info_enter_imagebutton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/psw_unlock"
	        android:layout_alignRight="@+id/info_enter_edittext2"
	        android:layout_alignTop="@+id/info_enter_edittext2"
	        android:layout_marginTop="4dp"
	        android:layout_marginRight="5dp"></ImageView>            -->

            <TextView
                android:id="@+id/info_enter_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info_enter_edittext2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="找回密码"
                android:textColor="#fb6f95"
                android:textSize="13dp" >
            </TextView>

            <Button
                android:id="@+id/info_enter_imagebutton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info_enter_textview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/enter_back"
                android:text="登录"
                android:textColor="#fb6f95"
                android:textSize="15dp" >
            </Button>

            <Button
                android:id="@+id/info_enter_imagebutton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/register_back"
                android:text="注册账号"
                android:textColor="#ffffff"
                android:textSize="15dp" >
            </Button>
        </RelativeLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/info_enter_progressbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>